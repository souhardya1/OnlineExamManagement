@model OnlineExamManagement.Models.Question

@{
    ViewBag.Title = "DeleteQuestion";
}

<h2>DeleteQuestion</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ques)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ques)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CourseRefId)
        </dt>

        <dd>
            @{ if (Model.CourseRefId == 1)
                {
                    <p>CSE</p>
                }
                else if (Model.CourseRefId == 2)
                {
                    <p>ECE</p>
                }
                else
                {
                    <p>IT</p>
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OptionA)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OptionA)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OptionB)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OptionB)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OptionC)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OptionC)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OptionD)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OptionD)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Correct)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Correct)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ViewQuestion")
        </div>
    }
</div>
