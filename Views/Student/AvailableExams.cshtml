@model IEnumerable<OnlineExamManagement.Models.Exam>

@{
    ViewBag.Title = "AvailableExams";
}
<link href="sample.css" rel="stylesheet" />
<div class="container_fluid s_availableexam">

    @{ if (User.Identity.IsAuthenticated)
        {
            <h1 class="s_availableexam_name">Welcome,  @User.Identity.Name</h1>
        }

    }
    <link href="teacher.css" rel="stylesheet" />
    @{ if (Session["IsEligible"].ToString() == "1")
        {
            <h2>AvailableExams</h2><br /><br />
            <div class="container my-5 s_aexam">


                <table class="t">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Course)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Active)
                        </th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @{
                                    if (item.CourseRefId == 1)
                                    {
                                        <p>ASP .Net MVC</p>

                                    }
                                    else if (item.CourseRefId == 2)
                                    {
                                        <p>Angular</p>

                                    }
                                    else
                                    {
                                        <p>SQL</p>
                                    }
                                }
                            </td>
                            <td>
                                @{
                                    if (System.DateTime.Now > item.Date)
                                    {
                                        <button class="inv-btn" role="button">Not Available</button>

                                    }
                                    else
                                    {
                                        if (item.Active == 1)
                                        {




                                            if (ViewBag.GivenExams != null)
                                            {
                                                List<string> completed = ViewBag.GivenExams as List<string>;
                                                if (completed.Contains(item.Code))
                                                {
                                                    <button class="inv-btn" role="button">Not Available</button>
                                                }
                                                else
                                                {
                                                    <button class="s_button">@Html.ActionLink("Start Exam", "Instructions", "Student", new { id = item.CourseRefId, name = item.Code }, null)</button>
                                                }

                                            }
                                            else
                                            {
                                                <button class="s_button">@Html.ActionLink("Start Exam", "Instructions", "Student", new { id = item.CourseRefId, name = item.Code }, null)</button>
                                            }

                                        }
                                        else
                                        {
                                            <button class="inv-btn" role="button">Not Available</button>
                                        }
                                    }

                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
            <div class="container">
                <h2>You have completed maximum number of exams. Please contact your teacher for further instructions.</h2>
            </div>


        }
    }

</div>

@section scripts{

    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null }
    </script>
}
